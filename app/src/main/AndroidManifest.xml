<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.corbinscreations.tileflip"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="com.google.android.gms.permission.AD_ID"/>

    <application
        android:name=".BackgroundMusicPlayer"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.TileFlip"
        tools:targetApi="31"
        android:hardwareAccelerated="true">
        <activity
            android:name=".TitleScreenActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.TileFlip.NoActionBar"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".GameScreenActivity"
            android:screenOrientation="portrait" />
        <activity android:name=".GameOverScreenActivity"
            android:screenOrientation="portrait" />
        <activity android:name=".StatisticsActivity"
            android:screenOrientation="portrait" />
        <activity android:name=".HowToPlayActivity"
            android:screenOrientation="portrait" />
        <activity android:name=".OptionsActivity"
            android:screenOrientation="portrait" />
        <meta-data
            android:name="com.google.android.gms.ads.APPLICATION_ID"
            android:value="ca-app-pub-3565112723096467~3379581386"/>
    </application>

</manifest>